<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:behavior_peekHeight="40dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:background="@color/light_grey"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5ssp"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/colorPicker1"
            android:layout_marginVertical="@dimen/_5ssp">
                <View
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:background="@drawable/note_color_1"/>
            <ImageView
                android:id="@+id/colorCheck1"
                android:layout_width="@dimen/_24ssp"
                android:layout_height="@dimen/_24ssp"
                android:layout_gravity="center"/>

        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/colorPicker2"
            android:layout_marginVertical="@dimen/_5ssp">
        <View
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:background="@drawable/note_color_2"/>
            <ImageView
                android:id="@+id/colorCheck2"
                android:layout_width="@dimen/_24ssp"
                android:layout_height="@dimen/_24ssp"
                android:layout_gravity="center"/>

        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/colorPicker3"
            android:layout_marginVertical="@dimen/_5ssp">
            <View
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:background="@drawable/note_color_3"/>
            <ImageView
                android:id="@+id/colorCheck3"
                android:layout_width="@dimen/_24ssp"
                android:layout_height="@dimen/_24ssp"
                android:layout_gravity="center"/>

        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/colorPicker4"
            android:layout_marginVertical="@dimen/_5ssp">
            <View
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:background="@drawable/note_color_4" />
            <ImageView
                android:id="@+id/colorCheck4"
                android:layout_width="@dimen/_24ssp"
                android:layout_height="@dimen/_24ssp"
                android:layout_gravity="center" />

        </FrameLayout>
    </LinearLayout>

</LinearLayout>