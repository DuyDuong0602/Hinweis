<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/noteItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10ssp"
        app:cardElevation="@dimen/_5ssp"
        android:layout_margin="@dimen/_5ssp"
        app:cardBackgroundColor="@color/light_blue"
        android:padding="@dimen/_5ssp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/specificNoteTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoslab"
                android:paddingTop ="@dimen/_10ssp"
                android:paddingLeft="@dimen/_10ssp"
                android:text="@string/note_title"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/specificNoteDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoslab"
                android:paddingLeft ="@dimen/_10ssp"
                android:paddingTop="@dimen/_2ssp"
                android:paddingBottom="@dimen/_2ssp"
                android:text="@string/note_date_created"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/specificNoteTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoslab"
                android:paddingLeft ="@dimen/_10ssp"
                android:paddingTop="@dimen/_2ssp"
                android:paddingBottom="@dimen/_5ssp"
                android:text="@string/note_tag"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/specificNoteContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoslab"
                android:paddingLeft ="@dimen/_10ssp"
                android:paddingTop="@dimen/_2ssp"
                android:paddingBottom="@dimen/_5ssp"
                android:text="@string/note_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>